<% layout("/layouts/boilerplate") %>
<style>
    #filters{
        margin-top: 2rem;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        text-align: center;
        margin-right: 2rem;
         margin-top: 1rem;
        opacity: 0.7;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filter p{
        font-size: 0.8rem;
    }
    .tax-info{
        display: none;
    }

    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 2rem;
        display: flex;
        align-items: center;
    }

    .scroll-container {
        display: flex;
        overflow-x: auto; 
        white-space: nowrap;
    }
    .item {
        padding: 20px;
        text-align: center;
        margin-right: 2rem;
        margin-top: 1rem;
        opacity: 0.7;
    }

</style>
<body>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 scroll-container">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card" style="width: 18rem;">
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                    <div class="card-img-overlay"><b>StayFound</b></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br>
                            
                            <span>&#8377; <%= listing.price.toLocaleString("en-IN") %> / month</span>
                            <i>&nbsp; &nbsp; +18% GST required</i>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>

    <div class="lsBox"></div>

</body>
