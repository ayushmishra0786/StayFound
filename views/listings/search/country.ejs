<% layout("/layouts/boilerplate") %>

<body>
    <h4>All posts of <%= q %></h4>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 scroll-container">
        <% for(let listing of matchedListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card" style="width: 18rem;">
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                    <div class="card-img-overlay"><b>Ayush</b></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br>
                            
                            <span>&#8377; <%= listing.price.toLocaleString("en-IN") %> / month</span>
                            <i class="tax-info">&nbsp; &nbsp; +18% GST required</i>
                        </p>
                    </div>
                </div>
            </a>    
        <% } %>
    </div>
    <div class="lsBox"></div>
</body>